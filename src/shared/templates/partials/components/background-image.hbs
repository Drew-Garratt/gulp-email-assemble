<table cellpadding="0" cellspacing="0" border="0" height="{{ height }}" width="{{ width }}">
  <tr>
    <td background="{{ image }}" bgcolor="{{ colour }}" class="p0 f0 bg-image" valign="top">
      [mso_bg_open]
      <v:rect xmlns:v="urn:schemas-microsoft-com:vml" fill="true" stroke="false" style="width:{{width_pixels}};height:{{ height }};">
        <v:fill type="frame" src="{{ image }}" color="{{ colour }}"></v:fill>
        <v:textbox inset="0,0,0,0">
      [mso_bg_close]
      <center>
        <table>
          <tr>
            {{> @partial-block }}
          </tr>
        </table>
      </center>
      [mso_bg_open]
        </v:textbox>
      </v:rect>
      [mso_bg_close]
    </td>
  </tr>
</table>
